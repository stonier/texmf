%******************************* OLD ENGLISH **********************************

\newfontfamily\oldenglishfamily{San Marco LT Std} % adobe
\newcommand{\textoldenglish}[1]{ {\oldenglishfamily #1} }

%******************************** FANTASY *************************************

\newfontfamily\fantasyfamily{Raphael Std} % adobe
\newcommand{\textfantasy}[1]{ {\fantasyfamily #1} }

%********************************* SCI-FI *************************************

\newfontfamily\scififamily{ITC Benguiat Gothic Std} % adobe
\newcommand{\textscifi}[1]{ {\scififamily #1} }

%********************************* CURSIVE ************************************

\newfontfamily\cursivefamily{Snell Roundhand LT Std} % adobe
\newcommand{\textcursive}[1]{ {\cursivefamily #1} }

%********************************* KOREAN  ************************************

\newfontfamily\kofamily{UnBatang}  % korean unfonts
\newcommand{\textko}[1]{ {\kofamily #1} }

%******************************* SMALL CAPS TITLE *****************************

\newfontfamily\smallcapsfamily{Linux Libertine O} % libertine-ttf

% Set a small caps title
% #1 - size of the title (normalsize,large,Large...)
% #2 - title words
\newcommand{\sctitle}[2][LARGE]{
   \begin{#1} \fontspec{Linux Libertine O} \textsc{#2} \end{#1}
}

